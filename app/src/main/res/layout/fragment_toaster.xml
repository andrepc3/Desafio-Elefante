<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_toaster"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".view.ToasterFragment">

            <TextView
                android:id="@+id/toaster_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loren lips dolor amet forget that loren lips text dolor."
                android:textAlignment="center"
                android:textColor="@color/toaster_text_message" />

            <Button
                android:id="@+id/toaster_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:text="Ok"
                android:textColor="@color/toaster_text_button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>